	<!--定义异常处理页面 -->
<bean id="exceptionResolver"
		class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<property name="exceptionMappings">
			<props>
				<prop key="org.springframework.web.HttpSessionRequiredException">mall/mobile/404</prop>
				<prop key="java.sql.SQLException">mall/mobile/404</prop>
				<prop key="java.io.IOException">mall/mobile/404</prop>
				<prop key="java.lang.Exception">mall/mobile/404</prop>
				<prop key="java.lang.RuntimeException">mall/mobile/404</prop>
			</props>
		</property>
		<property name="defaultErrorView" value="mall/mobile/404" />
	</bean> 

